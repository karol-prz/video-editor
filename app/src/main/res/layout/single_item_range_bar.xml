<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingTop="3dp"
              android:paddingStart="6dp"
              android:paddingEnd="6dp"
              android:layout_height="wrap_content">

    <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="This attribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/title" android:textSize="14sp"/>

    <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_remove_24"
                android:id="@+id/substractButton"/>

        <SeekBar
                android:id="@+id/rowSeekBar"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:layout_width="0dp" android:layout_height="match_parent"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_add_24"
                android:id="@+id/addButton"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_lock_open_24px"
                android:visibility="gone"
                android:id="@+id/lockButton"/>

    </LinearLayout>
</LinearLayout>